type Lesson {
    id: ID!
    title: String!
    description: String!
    lesson_type: LessonType!
}

enum LessonType {
    client
    raiser
    staff
}

type Task {
    id: ID!
    title: String!
    description: String!
    lessonId: ID!
}

type Screen {
    id: ID!
    title: String!
    text: String!
    videoUrl: String
    imageUrl: String
    onlyInstruction: Boolean!
    taskId: ID!
}

